                <span class="oi oi-briefcase" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenuBasicTasks = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleSubmenuBasicTasks()
    {
        expandSubMenuBasicTasks = !expandSubMenuBasicTasks;
    }
}
